#!/bin/bash

# Maintainer: EndeavourOS-Team <info@endeavouros.com>

# Ex-Maintainer:  Nissar Chababy <funilrys at outlook dot com>
# Ex-Maintainer:  Jeroen Bollen <jbinero at gmail dot comau>

pkgname=ckbcomp
_namesuffix=""
_archivesuffix=""
_parentname=console-setup
pkgver=1.208
pkgrel=1
pkgdesc="Compile a XKB keyboard description to a keymap suitable for loadkeys or kbdcontrol"
arch=(any)
url=https://salsa.debian.org/installer-team/$_parentname
license=('GPL2')
depends=('perl')
source=($url/-/archive${_archivesuffix}/$pkgver/${_parentname}${_namesuffix}-$pkgver.tar.gz)
sha512sums=('9c87d65c9ab78cf297b8e770c7e9ce6bbfcc3d932f081ff5580473c85f1c4d90b40e9ec54abda450221c640745057e3f5df480dab29c4e0b06fe55ab4edab2a5')

package() {
    cd ${_parentname}${_namesuffix}-$pkgver
    install -Dm755 Keyboard/ckbcomp ${pkgdir}/usr/bin/$pkgname

    rm -f ../${_parentname}${_namesuffix}-$pkgver.tar.gz   # cleanup
}
