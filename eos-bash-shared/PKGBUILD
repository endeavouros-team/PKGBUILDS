  install -Dm755 RunInTerminalOpt               $pkgdir/usr/bin/RunInTerminalOpt
  install -Dm755 RunInTerminalEx                $pkgdir/usr/bin/RunInTerminalEx
  install -Dm755 eos-sleep-counter              $pkgdir/usr/bin/eos-sleep-counter
