  install -Dm755 eos-wallpaper-set              $pkgdir/usr/bin/eos-wallpaper-set
  install -Dm755 UpdateInTerminal               $pkgdir/usr/bin/UpdateInTerminal
  install -Dm755 eos-update                     $pkgdir/usr/bin/eos-update
