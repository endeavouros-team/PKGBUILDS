AskUserCustomUrl() {
    local url=""
    local cmd=(
        eos_yad --entry
        --title="$INS_CUST_TEXT"
        --text="${INS_CUST_TEXT2}. $INS_CUST_TEXT3."
        --image=$WELCOME_ICON_QUESTION
    )

    url=$("${cmd[@]}")
    if [ $? -eq 0 ] ; then
        MagicId_new "$url"
    fi
}
export -f AskUserCustomUrl

