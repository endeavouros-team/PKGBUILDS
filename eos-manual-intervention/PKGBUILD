    $url/$pkgname.interventions
)
sha512sums=('ffba826dcd27e55a5be6d99cbb705215bd07b9cda86004e0d83a45d1caec40e2e83d617a84fa4873b45aa25ddd344d5ee473231b03b84b2f40584bae8acc2984'
            '796e626051dd216ab305329f5339b84906d726e30d6e7039a222c034fcfb9f970e8d9ff7fc343a8c90af3a760a87968cc892015910fa9aefdcbe5d16e45dcd60')

package() {
    install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
}
