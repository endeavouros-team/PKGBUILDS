    $url/$pkgname.interventions
)
sha512sums=('0679c4fce2eed40d7a9202f82e1bfef06f667bedbb41924b87a765fbfd4d44af35a8c6b7382467f9129a4c2efd9b4ab632fa6f639ccbfa65391a26ad86935c31'
            '40fdc8b8a310050de90f24ceec5dadb6b748e9194ae0b700b3b1e05cdd70bb2ac3f16630897541966670c7079b4fc0d1787e7d5de532a71d12bf9894f0f21eb8')

package() {
    install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
}
