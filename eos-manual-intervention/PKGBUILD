pkgrel=1
arch=('any')
license=('GPL')

source=(
    $url/$pkgname
    $url/$pkgname.interventions
)
sha512sums=('fffb016b60c3e79b09f9d33c7f46319ad09a36f9867572cf0b790343e2f94969e5a44badcd1213e65530807f4a5dba4489009aa5293edbe10cd51ab2378c4b4e'
            '38117bbb16f4221220ce80286c8f829fbad5643f082504cd2d01963f39255613f5a23505f2fa0f6249fa6c78e2c659add92f0a127a9a2cec8814ebbc6742d2f8')

package() {
    install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
}
