#!/bin/bash
# Maintainer: manuel (see forum.endeavouros.com)

pkgname=eos-manual-intervention
pkgdesc="Manual interventions manager."
url="https://github.com/endeavouros-team/PKGBUILDS/raw/master/$pkgname"
pkgver=0.25.12
pkgrel=1
arch=('any')
license=('GPL')
depends=(wget)

source=(
    $url/$pkgname
    $url/$pkgname.interventions
)
sha512sums=('5d8b8d48b1545e98525815b2c8d1c02625c515caf239ccdc603d0354f22ae6ee91c02dd3c56153b46c7eb564270c247b205785a50762dd064c9afc6a3abccfcc'
            'afde97bbc50c4c886f739260134ea9989764738f915ed58285ba290ba625027c883f811665d45bed69dc7e24f67fab0adeecd5b2b9ba3bb56684e455978a21fe')

package() {
    install -Dm755 "$pkgname"                "$pkgdir/usr/bin/$pkgname"
    install -Dm644 "$pkgname.interventions"  "$pkgdir/etc/$pkgname.interventions"  # fallback!
}
